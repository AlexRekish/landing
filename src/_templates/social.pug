-
    const socials = [
        {
            social: 'facebook',
            icon:'fb',
            link: '',
            height: 24,
            width: 13
        },
        {
            social: 'vk.com',
            icon: 'vk',
            link: '',
            height: 18,
            width: 28
        },
        {
            social: 'telegram',
            icon: 'tg',
            link: '',
            height: 20,
            width: 22
        },
        {
            social: 'bitcoin talks',
            icon: 'bt',
            link: '',
            height: 24,
            width: 24
        },
        {
            social: 'discord',
            icon: 'discord',
            link: '',
            height: 22,
            width: 20
        }
    ]
ul.social
    each value in socials
        li.social__list-item
            a.social__link(href=value.link)
                span.visually-hidden=value.social
                svg.social__icon(height=value.height, width=value.width)
                    use(xlink:href=`img/sprite.svg#icon-${value.icon}`)


